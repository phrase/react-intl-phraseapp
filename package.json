    "@types/react-dom": "^16.9.5",
    "@types/react-test-renderer": "^16.9.2",
    "jest": "^25.1.0",
    "merge": ">=1.2.1",
    "react": "^16.12.0",
    "react-addons-test-utils": "^15.6.2",
    "react-dom": "^16.12.0",
    "react-intl": "^5.0.0",
    "react-test-renderer": "^16.12.0",
    "ts-jest": "^25.2.0",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.5",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11"
  },
  "peerDependencies": {
    "react": ">=16.3.0",
    "react-intl": "^5"
  },
  "files": [
